
{
    "compilerOptions": {
        "lib": ["es2015", "es2017", "dom"],
        "target": "es6",
        "allowJs": false,
        "typeRoots": [
          "node_modules/@types"
        ],

        "outDir": "./dist",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "sourceMap": false,
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                 "lib/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true
}
